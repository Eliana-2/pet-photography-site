---
const {hasBorder = false, img="/pet-photography-site/icons/instagram.svg", isOrange = false, heading, text} = Astro.props;
---

<div class:list={{border: hasBorder}}>
  <img src={img} height="200" width="200">
  <h3 class:list={{orange: isOrange}}>{heading}</h3>
  <p>{text}</p>
</div>
<style>
  div {
    width: 30%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    padding: 1rem;
  }
  img {
    height: auto;
    width: 100%;
  }
  .border {
    border: 1px solid var(--orange);
    box-shadow: 4px 4px 4px 0 rgb(0 0 0 / 20%);
  }
  .orange {
    color: var(--orange);
  }
  @media (max-width: 600px) {
    div {
      width: 100%;
    }
  }
</style>