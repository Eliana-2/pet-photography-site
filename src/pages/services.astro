<style>
  .wrapper {
    display: flex;
    justify-content: center;
  }
  .process-wrapper {
    background-color: var(--dark-green);
  }
  .hero {
    position: relative;
    width: 100%;
    height: 675px;
    z-index: 1;
  }
  .hero:after {
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    opacity: 0.9;
    height: 675px;
    width: 100%;
    background-image: url('/pet-photography-site/services_hero.jpg');
    background-size: cover;
    background-position: top;
    z-index: -1;
  }
  .hero-container {
    width: 50%;
    display: flex;
    justify-content: center;
  }
  .hero-content {
    margin-top: 10%;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 500px;
    padding: 2rem;

  }
  .description {
    padding: var(--padding-large);
    max-width: 1000px;
  }
  .description h2 {
    text-align: center;
  }
  .description-cards {
    margin-top: 2.5rem;
    display: flex;
    justify-content: space-between;
  }
  .process {
    max-width: 1000px;
    color: white;
    padding: var(--padding-large);
  }
  .process h2 {
    color: var(--orange);
    text-align: center;
  }
  .process p {
    margin-top: 1rem;
  }
  .packages {
    padding: var(--padding-large);
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    align-items: center;
  }
  .package-cards {
    display: flex;
    justify-content: space-between;
  }
  .package-card {
    width: 30%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    padding: 1rem;
    border: 2px solid var(--dark-green);
    border-radius: 2rem;
    box-shadow: 4px 4px 4px 0 rgb(0 0 0 / 20%);
  }
  .package-card h3 {
    color: var(--orange);
  }
  .package-card p {
  }
  .packages h2 {
    text-align: center;
  }
  ul li {
    list-style-position: inside;
    list-style-type: '- '
  }

</style>