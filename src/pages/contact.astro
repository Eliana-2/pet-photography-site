---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pawprint Photography" headerShadow={true}>
	<main>
    <h1>Get in touch</h1>
    <form name="contact-form">
      <div class="label">
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
      </div>
      <div class="label">
        <label for="email">Email</label>
        <input type="email" name="email" id="email">
      </div>
      <div class="label">
        <label for="phone">Phone number</label>
        <input type="tel" name="phone" id="phone">
      </div>
      <div class="label">
        <label for="package">Package</label>
        <select name="package" id="package">
          <option value="basic">Basic Package</option>
          <option value="pawprint">Pawprint Package</option>
          <option value="furever">Fur-ever Package</option>
        </select>
      </div>
      <div class="label">
        <label for="comments">Additional comments</label>
        <textarea name="comments" id="comments" rows="6" cols="60"></textarea>
      </div>
      <button class="contact-button">Submit</button>
    </form>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10449.524976321605!2d-121.93121785951557!3d37.33886064091616!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fb9fe5f285e3d%3A0x8b5109a227086f55!2sKalifornia%2C%20Stany%20Zjednoczone!5e0!3m2!1spl!2spl!4v1719245803063!5m2!1spl!2spl" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
	</main>
</Layout>

<style>
  h1 {
    margin-top: 2.5rem;
    text-align: center;
    color: var(--orange);
    margin-inline: auto;
  }
  form {
    margin-block: var(--padding-large);
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    max-width: 60ch;
    align-items: center;
    gap: var(--padding-small)
  }
  form > * {
    width: 100%;
  }
  iframe {
    max-width: 100%;
    display: block;
    margin-inline: auto;
    margin-bottom: var(--padding-large)
  }
  .label {
    display: flex;
    gap: 2px;
    flex-direction: column;
  }
  input, select, textarea{
    font-size: inherit;
    font-family: inherit;
  }
  form .contact-button {
    width: fit-content;
    padding: 0.25rem 0.5rem;
    font-size: inherit;
    font-family: inherit;
    background-color: var(--orange);
    color: white;
  }
  @media (max-width: 600px) {
    form {
      padding-inline: var(--padding-small)
    }
  }
</style>

